
@{
    ViewBag.Title = "Cart";
}


<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay innerpage" style="background-image: url('../Images/mclaren-4535102_1280.jpg')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-6 text-center">
                    <h1>Cart</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="heading"><h1>CART</h1></div>

        <div class="col-sm-12 col-md-12 col-md-offset-1 mt-3">
            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Vehicle</th>
                        <th>Quantity</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Total</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="col-sm-8 col-md-6">
                            <div class="media">
                                <a class="thumbnail pull-left" href="#"> <img class="media-object" src="~/Images/img_1.jpg" style="width: 72px; height: 72px;"> </a>
                                <div class="media-body">
                                    <h4 class="media-heading">Brnad name</h4>
                                    <h5 class="media-heading"> Model name</h5>
                                    <span>Type: </span><span class="text-success"><strong>Sale</strong></span>
                                </div>
                            </div>
                        </td>
                        <td class="col-sm-1 col-md-1" style="text-align: center">
                            <input type="number" class="form-control" name="quantity">
                        </td>
                        <td class="col-sm-1 col-md-1 text-center"><strong>$4.87</strong></td>
                        <td class="col-sm-1 col-md-1 text-center"><strong>$14.61</strong></td>
                        <td class="col-sm-1 col-md-1">
                            <button type="button" class="btn btn-link btn-xs">
                                <span class="fa fa-trash"> </span>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-md-6">
                            <div class="media">
                                <a class="thumbnail pull-left" href="#"> <img class="media-object" src="~/Images/karl-kohler-Hf1rAKkfMAg-unsplash.jpg" style="width: 72px; height: 72px;"> </a>
                                <div class="media-body">
                                    <h4 class="media-heading">Brand name</h4>
                                    <h5 class="media-heading"> Model name</h5>
                                    <span>Type: </span><span class="text-warning">Rental</span>
                                </div>
                            </div>
                        </td>
                        <td class="col-md-1" style="text-align: center">
                            <input type="number" class="form-control" name="quantity">
                        </td>
                        <td class="col-md-1 text-center"><strong>$4.99</strong></td>
                        <td class="col-md-1 text-center"><strong>$9.98</strong></td>
                        <td class="col-md-1">
                            <button type="button" class="btn btn-link btn-xs">
                                <span class="fa fa-trash"> </span>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td> &nbsp; </td>
                        <td> &nbsp; </td>
                        <td><h5>Subtotal</h5></td>
                        <td class="text-right"><h5><strong>$24.59</strong></h5></td>
                        <td> &nbsp; </td>
                    </tr>
                    <tr>
                        <td> &nbsp; </td>
                        <td> &nbsp; </td>
                        <td><h5>Estimated shipping</h5></td>
                        <td class="text-right"><h5><strong>$6.94</strong></h5></td>
                        <td> &nbsp; </td>
                    </tr>
                    <tr>
                        <td> &nbsp; </td>
                        <td> &nbsp; </td>
                        <td><h3>Total</h3></td>
                        <td class="text-right"><h3><strong>$31.53</strong></h3></td>
                        <td> &nbsp; </td>
                    </tr>
                    <tr>
                        <td><button type="button" class="btn btn-primary"><span class="fa fa-shopping-cart"></span> continue shopping</button></td>
                        <td> &nbsp; </td>
                        <td> &nbsp; </td>
                        <td class="text-right"><button type="button" class="btn btn-secondary">checkout </button></td>
                        <td> &nbsp; </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>